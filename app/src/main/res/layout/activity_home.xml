<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/anaarka"
    tools:context=".Home">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/dolarr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:background="#95a5a6"
                android:gravity="center"
                android:text="DOLAR"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/dolar"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:background="#95a5a6"
                android:textColor="#00ff00"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/euroo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dolarr"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="EURO"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/euro"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="3"

                android:textColor="#00ff00"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/altınn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/euroo"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:background="#95a5a6"
                android:gravity="center"
                android:text="GRAM ALTIN	"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/altın"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:background="#95a5a6"
                android:textColor="#00ff00"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bistt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/altınn"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="BIST 100	"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/bist"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:textColor="#00ff00"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/sterlinn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bistt"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:background="#95a5a6"
                android:gravity="center"
                android:text="STERLİN"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/sterlin"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:background="#95a5a6"
                android:textColor="#00ff00"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/faizz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sterlinn"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="FAİZ"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/faiz"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:textColor="#00ff00"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/petroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sterlinn"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="#95a5a6"
                android:gravity="center"
                android:text="BRENT PETROL"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/petrol"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:background="#95a5a6"
                android:textColor="#00ff00"
                android:textSize="20dp" />


        </LinearLayout>



        <LinearLayout
            android:id="@+id/isviçree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/petroll"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="5"

                android:gravity="center"
                android:text="İSVİÇRE DOLARI"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/isviçre"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="3"

                android:textColor="#00ff00"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/riyall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/isviçree"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:background="#95a5a6"
                android:gravity="center"
                android:text="SUUDİ RİYALİ"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/riyal"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:background="#95a5a6"
                android:textColor="#00ff00"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/japonn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/riyall"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="100 JAPON YENİ"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/japon"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="3"

                android:textColor="#00ff00"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/avustralyaa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/japonn"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:background="#95a5a6"
                android:gravity="center"
                android:text="AVUSTRALYA DOLARI"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/avustralya"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:background="#95a5a6"
                android:textColor="#00ff00"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/norveçç"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avustralyaa"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="NORVEÇ KRONU"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/norveç"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:textColor="#00ff00"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/danimarkaa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/norveçç"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:background="#95a5a6"
                android:gravity="center"
                android:text="DANİMARKA KRONU"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/danimarka"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:background="#95a5a6"
                android:textColor="#00ff00"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/isveçç"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/danimarkaa"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="İSVEÇ KRONU"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/isveç"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:textColor="#00ff00"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/kanadaa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/isveçç"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:background="#95a5a6"
                android:gravity="center"
                android:text="KANADA DOLARI"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/kanada"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:background="#95a5a6"
                android:textColor="#00ff00"
                android:textSize="20dp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:foregroundGravity="center"
        android:layout_alignParentBottom="true">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:id="@+id/cevirici"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:background="@drawable/cevirr"
            >

        </ImageView>


    </LinearLayout>


</RelativeLayout>

